{% extends 'base.html.twig' %}

{% block title %}Add New Post{% endblock %}

{% block stylesheets %}
<style>
  body {
    background-color: #171717;
    margin: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: Arial, sans-serif;
  }
  .post-form {
    background: #222;
    border: 6px solid #00bcd4;
    padding: 2rem;
    border-radius: 8px;
    width: 360px;
    box-shadow: 0 0 16px rgba(0, 188, 212, 0.5);
    color: #eee;
  }
  .post-form h1 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #00bcd4;
  }
  .post-form label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #ccc;
  }
  .post-form input[type="text"],
  .post-form textarea,
  .post-form select {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #444;
    border-radius: 4px;
    background-color: #333;
    color: #eee;
  }
  .post-form textarea {
    resize: vertical;
  }
  .post-form button {
    width: 100%;
    background-color: #00bcd4;
    border: none;
    color: white;
    font-weight: bold;
    padding: 0.75rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .post-form button:hover {
    background-color: #0097a7;
  }
</style>
{% endblock %}

{% block body %}
  {{ form_start(form, {'attr': {'class': 'post-form'}}) }}
    <h1>Add New Post</h1>
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.type) }}
    {{ form_row(form.tags) }}

    <button type="submit">Submit</button>
  {{ form_end(form) }}
{% endblock %}
